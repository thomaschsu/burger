<h1 class="text-center">Eat-Da-Burger!</h1>
<div class="container">
   <div class="row">
      <div class="col-xs-6">
         <h3>Available Burgers</h3>
         <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
               {{id}}. {{burger_name}}
               <button class="devour-burger" data-id="{{this.id}}">DEVOUR IT!</button>
            </li>
            {{/unless}}
            {{/each}}
         </ul>
      </div>
      <div class="col-xs-6">
         <h3>Devoured Burgers</h3>
         <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
               {{id}}. {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
         </ul>
      </div>
   </div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">
   <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
   </div>
   <button type="submit">Add Burger</button>
</form>